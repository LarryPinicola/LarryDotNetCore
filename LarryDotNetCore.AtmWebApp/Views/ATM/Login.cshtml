﻿@{
    ViewData["Title"] = "Login";
}


<div class="container" style="margin-top:150px;">
    <div class="row justify-content-center">
        <div class="col-6">
            <img src="~/img/atm-logo.jpg" style="width:70%;" />
        </div>
        <div class="col-6">
            <div class="card">
                <div class="card-header">
                    <h4 class="text-center">Login To Your ATM Account</h4>
                </div>
                <div class="card-body">
                    <form method="post" action="/ATM/Login">
                        <div class="form-group">
                            <label for="CardNumber">Card Number</label>
                            <input type="text" name="CardNumber" class="form-control" id="CardNumber" placeholder="Enter your cardNumber">
                        </div>
                        <div class="form-group mt-2">
                            <label for="Pin">Card Pin</label>
                            <input type="password" name="Pin" class="form-control" id="Pin" placeholder="Enter your card pin" required>
                        </div>
                        <div class="d-flex justify-content-around align-middle mt-3">
                            <button type="submit" class="btn btn-primary mt-3">Login</button>
                            <div class="form-group text-center">
                                <h6 class="mt-3">
                                    Sign Up here if you haven't registerd yet.
                                    <a href="/ATM/Register">Register Account</a> here!
                                </h6>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>